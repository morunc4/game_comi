<div class="container">
  <div class="col-md-10 mx-auto">
    <div class="border bg-light py-5">
      <div class="row">
        <div class="col-md-4 mx-auto mt-3">
          <%=image_tag @user.get_image(200,200) %>
        </div>
        <div class="col-md-7">
          <div class="row">
            <p class="col-4">ニックネーム</p>
            <p class="font-weight-bold h4 col-8">
              <%=@user.name %>
            </p>
          </div>
          <div class="row mt-3">
            <p class="col-4">レビューした数</p>
            <p class="col-3 font-weight-bold h5"><%=@user.reviews.count %>件</p>
          </div>
        </div>
      </div>
    </div>
　　<p class="h4 bg-success text-white col-3 text-center mt-3">レビュー</p>
    <table class="table">
      <tbody>
        <% @review.each do |review| %>
          <tr>
            <td class="col-2">
              <%=link_to (image_tag(review.rakuten_game.smallimage_url)), review.rakuten_game.item_url %>
            </td>
            <td class="col-8">
              <div class="row">
                <p class="bg-secondary text-white">評価</p>　<%=review.score %>/5点
              </div>
              <p class="font-weight-bold"><%=review.title %></p>
              <p><%=review.review %></p>

            </td>
            <td class="col-2">
              <%=link_to "削除する",admin_rakuten_game_review_path(review.rakuten_game_id,review), method: :delete,"data-confirm"=>"本当に削除しますか？",class: "btn btn-danger btn-sm mt-2" %>
            </td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>