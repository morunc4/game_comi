<!DOCTYPE html>
<html>
  <head>
    <title>Game</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">

          <a class="navbar-brand p-3">
            <%=link_to root_path do %>
              <%=image_tag 'logo.jpg', size: '200x80' %>
            <%end%>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>



              <li class="nav-item">
                <%=link_to "マイページ", user_path(current_user.id),class: 'mr-3 btn btn-outline-secondary nav-link text-dark' %>
              </li>

              <li class="nav-item">
                <%=link_to "検索", search_rakuten_games_path,class: 'mr-3 btn btn-outline-secondary nav-link text-dark' %>
              </li>

              <li class="nav-item">
                <%=link_to "ログアウト", destroy_user_session_path,method: :delete, class: 'mr-3 btn btn-outline-secondary nav-link text-dark' %>
              </li>
            <%elsif admin_signed_in? %>
              <li class="nav-item">
                <%=link_to "検索", search_rakuten_games_path,class: 'mr-3 btn btn-outline-secondary nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%=link_to "ゲーム一覧", admin_rakuten_games_path,class: 'mr-3 btn btn-outline-secondary nav-link text-dark' %>
              </li>

              <li class="nav-item">
                <%=link_to "ユーザ一覧", admin_users_path,class: 'mr-3 btn btn-outline-secondary nav-link text-dark' %>
              </li>

              <li class="nav-item">
                <%=link_to "ログアウト", destroy_admin_session_path,method: :delete, class: 'mr-3 btn btn-outline-secondary nav-link text-dark' %>
              </li>

            <% else %>

              <li class="nav-item">
                <%=link_to "検索", search_rakuten_games_path,class: 'mr-3 btn btn-outline-secondary nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark mr-3 btn btn-outline-secondary' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark mr-3 btn btn-outline-secondary' %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="bg-info pt-2 mt-4"></div>
      <div class="text-center mt-4 mb-4">
        <a href="https://webservice.rakuten.co.jp/" target="_blank"><img src="https://webservice.rakuten.co.jp/img/credit/200709/credit_31130.gif" border="0" alt="Rakuten Web Service Center" title="Rakuten Web Service Center" width="311" height="30"/></a>
      </div>
      <div class="text-center mb-3">Logo generated by <a href="https://www.designevo.com/" title="Free Online Logo Maker">DesignEvo free logo designer</a></div>
    </footer>
  </body>
</html>
