<p class="h4 bg-info pl-5">プロフィール編集</p>
<div class="container">
  <div class="col-md-6 mx-auto">
    <div class="border bg-light py-5 ">
      <%=form_with model: current_user do |f| %>
        <div class="field mx-3">
          <p class="h5">ニックネーム</p>
          <%=f.text_field :name,class: "form-control" %>
        </div>

        <div class="field mx-3 mt-3">
          <p class="h5">プロフィール画像</p>
          <%=f.file_field :image,accept: "image/*" %>
        </div>

        <div class="field text-center mt-3">
          <%=f.submit "変更する",class: "btn btn-success" %>
        </div>



      <%end%>
    </div>
  </div>
</div>